{
  "name": "@microsoft/ai-chat-protocol",
  "version": "0.1.0-alpha.1",
  "description": "",
  "main": "./dist/commonjs/index.js",
  "scripts": {
    "build": "tshy",
    "watch": "tshy -w",
    "bundle": "npm run build && rollup -c",
    "lint": "eslint src",
    "format": "prettier --write src test",
    "clean": "rimraf dist",
    "test": "vitest --run",
    "postinstall": "playwright install chromium"
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/microsoft/ai-chat-protocol.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/microsoft/ai-chat-protocol/issues"
  },
  "homepage": "https://github.com/microsoft/ai-chat-protocol#readme",
  "devDependencies": {
    "@types/node": "^20.11.20",
    "@vitest/browser": "^1.5.0",
    "eslint": "^8.57.0",
    "playwright": "^1.43.1",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "rollup": "^4.12.0",
    "rollup-plugin-dts": "^6.1.0",
    "tshy": "^1.11.1",
    "typescript": "^5.3.3",
    "typescript-eslint": "^7.1.1",
    "vitest": "^1.3.1"
  },
  "tshy": {
    "exports": {
      "./package.json": "./package.json",
      ".": "./src/index.ts"
    },
    "dialects": [
      "esm",
      "commonjs"
    ],
    "esmDialects": [
      "browser"
    ],
    "selfLink": false
  },
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "browser": {
        "types": "./dist/browser/index.d.ts",
        "default": "./dist/browser/index.js"
      },
      "import": {
        "types": "./dist/esm/index.d.ts",
        "default": "./dist/esm/index.js"
      },
      "require": {
        "types": "./dist/commonjs/index.d.ts",
        "default": "./dist/commonjs/index.js"
      }
    }
  },
  "types": "./dist/commonjs/index.d.ts",
  "type": "module",
  "dependencies": {
    "@typespec/ts-http-runtime": "^1.0.0-alpha.20240228.1"
  }
}
